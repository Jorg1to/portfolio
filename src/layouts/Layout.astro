	<body>
		<Header/>
		<slot />

		<div class="absolute top-0 z-[-2] h-screen w-screen bg-neutral bg-[radial-gradient(ellipse_100%_100%_at_50%_-20%,rgba(120,119,198,0.3),rgba(0,0,0,0))]"></div>
		

	</body>
