---
import Header from '../components/header.astro';
import "@fontsource-variable/onest";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		
		<meta charset="UTF-8" />
		<meta name="description" content="Soy un desarrollador web junior enfocado en aprender y mejorar continuamente mis habilidades tÃ©cnicas para aportar valor a los equipos con los que trabajo." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
